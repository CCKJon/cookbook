/* Write your global styles here, in PostCSS syntax */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    scroll-behavior: smooth;
  }
  
  /* Light theme (default) */
  body {
    @apply font-sans text-neutral-800 bg-neutral-50;
  }
  
  /* Dark theme */
  body.dark {
    @apply text-neutral-100 bg-neutral-900;
  }
  
  h1, h2, h3, h4, h5, h6 {
    @apply font-serif font-semibold;
  }
}

@layer components {
  /* Light theme buttons */
  .btn-primary {
    @apply bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-6 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5;
  }
  
  .btn-secondary {
    @apply bg-neutral-100 hover:bg-neutral-200 text-neutral-800 font-medium py-3 px-6 rounded-lg transition-all duration-200 border border-neutral-300;
  }
  
  .card {
    @apply bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border border-neutral-100;
  }
  
  .input-field {
    @apply w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200;
  }
  
  /* Dark theme overrides */
  .dark .btn-primary {
    @apply bg-walnut-700 hover:bg-walnut-800 text-neutral-50;
  }
  
  .dark .btn-secondary {
    @apply bg-neutral-800 hover:bg-neutral-700 text-neutral-100 border-neutral-600;
  }
  
  body.dark .card {
    @apply bg-[#1a0f0a] border-[#0d0805] shadow-lg;
  }
  
  /* Additional specificity for recipe cards */
  body.dark .card.overflow-hidden {
    @apply bg-[#1a0f0a] border-[#0d0805] shadow-lg;
  }
  
  .dark .input-field {
    @apply border-neutral-600 focus:ring-walnut-500 bg-neutral-800 text-neutral-100;
  }
  
  .section-padding {
    @apply py-16 px-4 sm:px-6 lg:px-8;
  }
  
  .container-max {
    @apply max-w-7xl mx-auto;
  }
}
